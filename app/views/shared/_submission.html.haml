%li.thumb
  .img-wrap
    = link_to page_path("submission") do
      = image_tag("http://lorempixel.com/360/225/nature/#{rand(8)}")
      .img-shadow
  .identity
    %p.title= link_to(submission.title, submission_path(submission))
    %p.author
      by <a href="#">akka</a>
  .stats
    -# Might use jquery sparklines instead
    - values = 10.times.map { rand(1..100) }
    %span.boxplot= "#{values.join(',')}"
    %span.average-rating= rand(10000)/100.00
