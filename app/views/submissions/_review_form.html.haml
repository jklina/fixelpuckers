- if current_user.present?
  .avatar
    .img-wrap
      = link_to '#' do
        = image_tag('http://lorempixel.com/100/100/nature/5')
  = simple_form_for [@submission, @review] do |f|
    %h2 Leave a Review
    = f.input :rating, :placeholder => '0 - 100'
    = f.input :comment
    = f.button :submit
- else
  %p Please sign up to leave a review.
