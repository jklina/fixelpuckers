%li.review{id: "#{review.selector}"}
  .avatar
    = link_to '#' do
      = image_tag('http://lorempixel.com/100/100/nature/1', :class => 'avatar--img')
  .comment-chip
    .comment-details
      %h3= link_to review.user.username, user_path(review.user)
      %span.meta= time_ago_in_words(review.created_at)
      .comment-details-action-menu
        = link_to '<i class="ss-icon">delete</i>'.html_safe, 'javascript:void(0)', id: 'action-delete-comment'
    .comment-body

      -if signed_in?
        .arrows
          = link_to vote_up_path(id: review, type: "review"), method: :post, remote: true, id: "up" do
            %i.ss-icon.arrow.up{ class: ("active" if current_user.likes review)} up
          = link_to vote_down_path(id: review, type: "review"), method: :post, remote: true, id: "down" do
            %i.ss-icon.arrow.up{ class: ("active" if current_user.dislikes review)} down
      %p= review.comment
  #draw
    %h4.rating= review.rating
:javascript
  var rating = #{review.rating};

