%h1.brand
  = link_to "Pixelfuckers", root_path
%nav.main-nav
  %ul.main
    %li
      = link_to 'Browse', 'javascript:void(0);', :id => 'browseToggle'
    %li
      = link_to 'Forums', '#'
    %li
      = link_to 'News', '#'
    %li
      = link_to 'Chat', '#'

#searchToggle.search
  %i.ss-icon search

%nav.account
  .account-dropdown
    - if user_signed_in?
      .avatar
        .img-wrap
          = link_to '#' do
            = image_tag('http://lorempixel.com/100/100/nature/1')
            .img-shadow
      %ul.account-dropdown-list
        %li.account-dropdown-item
          = link_to edit_user_registration_path do
            %i.ss-icon settings
            Settings
        %li.account-dropdown-item
          = link_to new_submission_path do
            %i.ss-icon upload
            Submit
        %li.account-dropdown-item
          = link_to '#' do
            %i.ss-icon inbox
            Activity
        - if current_user.has_role? :admin
          %li.account-dropdown-item
            = link_to users_path do
              %i.ss-icon star
              Admin
        %li.account-dropdown-item
          = link_to destroy_user_session_path, :method=>'delete' do
            %i.ss-icon logout
            Sign Out
    - else
      .avatar.placeholder
        .img-wrap
          %i.ss-icon user
          .img-shadow
      %ul.account-dropdown-list
        %li.account-dropdown-item
          = link_to 'Login', new_user_session_path, :class=> 'login'
        %li.account-dropdown-item
          = link_to 'Register', new_user_registration_path, :class => 'register'
