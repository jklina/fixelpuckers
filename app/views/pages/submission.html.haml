%section.submission
  .wrapper
    .submission-title-section
      .vcard
        .avatar
          .img-wrap
            = link_to '#' do
              = image_tag('http://lorempixel.com/100/100/nature/1')
              .img-shadow
        .byline
          %p.title
            Spring by
            = link_to 'akka', '#'
