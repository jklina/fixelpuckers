%section.featured
  .wrapper
    .thumb
      .img-wrap
        = link_to '#' do
          = image_tag('http://lorempixel.com/1200/400/abstract/3')
          .img-shadow

%section.submissions
  .wrapper
    %h2 Recent Submissions
    - if @submissions.present?
      %ol.thumbs
        = render partial: 'shared/submission', collection: @submissions
    - else
      %p There are no submissions yet!

    %nav.pagination
      %ul
        %li.page-prev
          %span.inactive &larr;
        %li
          %span.current 1
        %li
          = link_to "2", "#"
        %li
          = link_to "3", "#"
        %li
          = link_to "4", "#"
        %li.page-next
          = link_to "&rarr;".html_safe, "#"

