%section.featured
  .wrapper
    .thumb_featured
      .thumb--img-wrap
        = link_to '#' do
          =image_tag(@feature.preview.url, :class => 'thumb--img')
          .thumb--img-shadow
    %p.description 
      = @feature.description
      &mdash; 
      = link_to @feature.author, @feature.author, class: "highlight"

%section.submissions
  .wrapper
    %h2 Recent Submissions
    -# TODO: Possible move this into a helper or presenter
    - if @submissions.present?
      %ol.thumbs-list
        = render @submissions
    - else
      %p There are no submissions yet!

    = paginate @submissions

